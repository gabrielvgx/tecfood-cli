{
    "version": "3",
    "services": {
        "app": {
            "image": "gvgx/cordova-app-tecfood:latest",
            "container_name": "app-container",
            "build": ".",
            "working_dir": "/home/developer/workfolder",
            "restart": "always",
            "tty": true,
            "networks": [
                "dev_network"
            ]
        },
        "birt": {
            "buildParams": { "private": true },
            "image": "dockerhub.teknisa.com/birt:latest",
            "container_name": "birt",
            "networks": [
                "dev_network"
            ],
            "restart": "always"
        },
        "basedev": {
            "buildParams": { "private": true },
            "image": "dockerhub.teknisa.com/c9-php7:latest",
            "container_name": "basedev-container",
            "networks": [
                "dev_network"
            ],
            "restart": "always"
        },
        "mongo": {
            "image": "mongo:3.2",
            "container_name": "mongo-container",
            "networks": [
                "dev_network"
            ]
        },
        "algoritmo": {
            "image": "node:10",
            "container_name": "algoritmo-container",
            "user": "node",
            "working_dir": "/home/node/app",
            "environment": [
                "NODE_ENV=production",
                "TZ=America/Sao_Paulo"
            ],
            "volumes": [],
            "ports": [],
            "networks": [
                "dev_network"
            ],
            "restart": "always",
            "command": "node --max-old-space-size=10000 server.js"
        }
    },
    "networks": {
        "dev_network": {
            "name": "dev_network",
            "driver": "bridge"
        }
    }
}